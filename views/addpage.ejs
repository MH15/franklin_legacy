<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Add Page</title>
	<link href="https://fonts.googleapis.com/css?family=Work+Sans" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="normalize.css">
	<link rel="stylesheet" type="text/css" href="css/style.min.css">
</head>
<body>

<!-- non-editable zone -->
<header>
	<h1>Add Page</h1>
</header>

<div id="pageEditor">
	<% for(var i=0; i< result.length; i++) {%>
		<div class="page" franklin-page-number="<%=i%>">
			<span><%= result[i].pageName %></span>
			<button class="right">❌</button>
			<button class="right">▲</button>
			<button class="right">▼</button>
		</div>
	<% } %>
	<div id="newPage">
		<form action="registernewpage" method="post" id="addPageForm">
			<span><input type="text" name="newPageName" placeholder="new page name"></span>
			<span><button type="submit" id="submitButton">Add Page</button></span>
			<div class="pageTypes">			
				<input type="radio" name="template" value="1" id="r1" required/>
				<label class="sample" for="r1">
					<div class="preview"></div>
				</label>
				<input type="radio" name="template" value="2" id="r2" />
				<label class="sample" for="r2">
					<div class="preview"></div>
				</label>
				<input type="radio" name="template" value="3" id="r3" />
				<label class="sample" for="r3">
					<div class="preview"></div>
				</label>
			</div>
		</form>
	</div>
</div>



<%-
	include('templates/footer.ejs')
%>


<script src="franklin-addpage.js"></script>


</body>